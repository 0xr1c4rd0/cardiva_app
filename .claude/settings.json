{
  "model": "sonnet",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo [Hook] File modified - remember to run tests before commit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo [Hook] Session ending - consider creating a handoff if work is incomplete"
          }
        ]
      }
    ]
  },
  "rules": [
    ".claude/rules/coding-style.md",
    ".claude/rules/testing.md",
    ".claude/rules/security.md",
    ".claude/rules/git-workflow.md"
  ],
  "context": {
    "alwaysLoad": [
      "CLAUDE.md",
      ".planning/PROJECT.md",
      ".planning/ROADMAP.md"
    ]
  }
}
